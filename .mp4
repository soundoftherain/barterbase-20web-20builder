<!-- FEATURED PLAYER + THUMBNAILS -->
<section style="padding:30px;background:#071014;color:#fff;">
  <div style="max-width:1000px;margin:0 auto;">
    <video id="featured" controls style="width:100%;height:auto;border-radius:10px;">
      <source src="videos/emp-protection.mp4" type="video/mp4">
      Your browser does not support video.
    </video>

    <div id="thumbs" style="display:flex;gap:12px;margin-top:12px;overflow-x:auto;">
      <button data-src="videos/emp-protection.mp4" style="border:0;background:transparent;padding:0;cursor:pointer;">
        <img src="videos/thumb-emp.jpg" alt="EMP" style="width:160px;border-radius:6px;display:block">
      </button>

      <button data-src="videos/food-preservation.mp4" style="border:0;background:transparent;padding:0;cursor:pointer;">
        <img src="videos/thumb-food.jpg" alt="Food" style="width:160px;border-radius:6px;display:block">
      </button>

      <button data-src="videos/barter-marketplace.mp4" style="border:0;background:transparent;padding:0;cursor:pointer;">
        <img src="videos/thumb-market.jpg" alt="Market" style="width:160px;border-radius:6px;display:block">
      </button>
    </div>
  </div>
</section>

<script>
  // swap featured video when a thumbnail/button is clicked
  document.getElementById('thumbs').addEventListener('click', function(e){
    const btn = e.target.closest('button[data-src]');
    if(!btn) return;
    const src = btn.getAttribute('data-src');
    const vid = document.getElementById('featured');
    // remember playback time & paused state optionally
    vid.pause();
    vid.querySelector('source').src = src;
    vid.load();
    vid.play().catch(()=>{}); // autoplay may be blocked unless user previously interacted
  });
</script>


